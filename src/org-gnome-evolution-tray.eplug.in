<?xml version="1.0"?>
<e-plugin-list>
<e-plugin
	type="shlib"
	id="org.gnome.evolution.plugin.evolution-tray"
	location="@PLUGIN_INSTALL_DIR@/liborg-gnome-evolution-tray.so"
	domain="@GETTEXT_PACKAGE@"
	localedir="@LOCALEDIR@"
	name="Evolution Tray">
	<description>Support for minimizing Evolution to the system tray</description>
	<author name="Lucian Langa" email="lucilanga@gnome.org"/>
	<author name="Kostadin Atanasov" email="pranayama111@gmail.com"/>
	<author name="Ozan Türkyılmaz" email="ozan.turkyilmaz@gmail.com"/>
	<author name="George Katevenis" email="george_kate@hotmail.com"/>

	<hook class="org.gnome.evolution.ui:1.0">
		<ui-manager id="org.gnome.evolution.mail"/>
	</hook>
	<hook class="org.gnome.evolution.mail.events:1.0">
		<event id="folder.unread-updated"
			handle="org_gnome_mail_folder_unread_updated"
			target="message"/>
	</hook>
</e-plugin>
</e-plugin-list>
