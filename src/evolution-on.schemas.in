<gconfschemafile>
  <schemalist>

    <schema>
      <key>/schemas/apps/evolution/eplugin/evolution-tray/hidden-on-startup</key>
      <applyto>/apps/evolution/eplugin/evolution-tray/hidden-on-startup</applyto>
      <owner>evolution-tray</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>Start Evolution Mail minimized.</short>
        <long>
            On startup Evolution Mail will start minimized to tray
        </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/evolution/eplugin/evolution-tray/hide-on-minimize</key>
      <applyto>/apps/evolution/eplugin/evolution-tray/hide-on-minimize</applyto>
      <owner>evolution-tray</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>Hide Evolution Mail on minimize.</short>
        <long>
	    When pressing minimize button Evolution Mail window is automatically hidden
        </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/evolution/eplugin/evolution-tray/hide-on-close</key>
      <applyto>/apps/evolution/eplugin/evolution-tray/hide-on-close</applyto>
      <owner>evolution-tray</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>Hide Evolution Mail on close.</short>
        <long>
	    When pressing close button Evolution Mail window is automatically hidden
        </long>
      </locale>
    </schema>

  </schemalist>
</gconfschemafile>
